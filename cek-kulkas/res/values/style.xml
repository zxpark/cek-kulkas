<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CekKulkasTheme" parent="@android:style/Theme.Light">
        <item name="android:windowTitleSize">30dp</item>
    </style>

    <style name="MenuTitle" parent="@android:style/Theme.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextShadow" parent="@android:Theme.Black">
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="Animations" />

    <style name="Animations.PopDownMenu" />

    <style name="Animations.PopDownMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopUpMenu" />

    <style name="Animations.PopUpMenu.Center">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

</resources>